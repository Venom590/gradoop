<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<datasource xmlns="http://www.gradoop.org/csvInput"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://www.gradoop.org/csvInput
            csv_format.xsd">

    <csvfile name="graph.csv" charset="utf8" seperator="|"
             graphelementtype="graph">
        <label>
            <specified>Graph</specified>
        </label>
        <key>
            <id>
                <field>0</field>
            </id>
            <sys>AllSystems</sys>
        </key>
        <columns>
            <column name="id" type="Long"/>
            <column name="nodeCount" type="Integer"/>
        </columns>
    </csvfile>

    <csvfile name="book.csv" charset="utf8" seperator="|"
             graphelementtype="vertex">
        <label>
            <field>1</field>
            <field>2</field>
        </label>
        <containment>
            <graphid>1</graphid>
        </containment>
        <key>
            <id>
                <field>0</field>
            </id>
            <sys>MyBooks</sys>
        </key>
        <columns>
            <column name="isbn" type="String"/>
            <column name="author" type="String"/>
            <column name="title" type="String"/>
        </columns>
    </csvfile>

    <csvfile name="author.csv" charset="utf8" seperator="|"
             graphelementtype="vertex">
        <label>
            <field>0</field>
        </label>
        <containment>
            <graphid>1</graphid>
            <graphid>2</graphid>
        </containment>
        <key>
            <id>
                <field>0</field>
                <field>3</field>
            </id>
            <sys>AllAuthors</sys>
        </key>
        <columns>
            <column name="name" type="String"/>
            <column name="age" type="String"/>
            <column name="phone" type="String"/>
            <column name="zip" type="String"/>
        </columns>
    </csvfile>

    <csvfile name="writes.csv" charset="utf8" seperator="|"
             graphelementtype="edge">
        <label>
            <specified>writes</specified>
        </label>
        <containment>
            <graphid>1</graphid>
        </containment>
        <edgeids sourceid="1" targetid="2"/>
        <key>
            <id>
                <field>1</field>
                <field>2</field>
            </id>
            <sys>AllAuthors</sys>
        </key>
        <columns>
            <column name="date" type="String"/>
            <column name="sourceId" type="Long"/>
            <column name="targetID" type="Long"/>
            <column name="teamWork" type="Boolean"/>
        </columns>
    </csvfile>

</datasource>

